<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:fontFamily="@font/arial"
                android:background="@drawable/border"
                android:id="@+id/detailsJP"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Chi tiết việc làm"
                android:textColor="@android:color/background_dark"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/motacongty"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/detailsJP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLogoAd_Details"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:contentDescription="@null"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2.0"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">
                    <EditText
                        android:id="@+id/edtPosition_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:gravity="left|center" />

                    <EditText
                        android:id="@+id/edtName_Details"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/idLinearLayout1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/user_group"/>
                    <EditText
                        android:id="@+id/edtNumber_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Address_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/address"/>
                    <EditText
                        android:id="@+id/edtLocation_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/salary_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/salary"/>
                    <EditText
                        android:id="@+id/edtSalary_Details"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="17dp"
                        android:gravity="left|center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/sex_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gender"/>
                    <EditText
                        android:id="@+id/edtGender_Details"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="17dp"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yeucau"
                android:background="@drawable/border"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:fontFamily="@font/arial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Yêu cầu"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark">
                </TextView>
                <EditText
                    android:id="@+id/edtRequired_Details"
                    android:fontFamily="@font/arial"
                    android:lineSpacingExtra="5dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/background_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:fontFamily="@font/arial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Quyền lợi"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark">
                </TextView>
                <EditText
                    android:id="@+id/edtBenifit_Details"
                    android:fontFamily="@font/arial"
                    android:lineSpacingExtra="5dp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/background_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:paddingBottom="5dp"
                    android:padding="5dp"
                    android:gravity="left|center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnUpdatePost"
                    style="@style/loginButton"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorAccent"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="Cập nhật bài đăng" />

                <Button
                    android:id="@+id/btnXoaPost"
                    style="@style/loginButton"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Xóa bài đăng" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

