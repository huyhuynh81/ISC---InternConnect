<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="@string/register"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/edtName"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/edtPhone"
                style="@style/modifiedEditText"
                android:inputType="phone"
                android:maxLines="1"
                android:hint="Mobile Number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/edtEmail"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Email"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPassword"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <RelativeLayout

                android:layout_width="350dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtPassword"
                    style="@style/modifiedEditText"
                    android:hint="@string/login_password_hint"
                    android:maxLines="1"
                    android:inputType="textPassword"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgShowPass"
                        android:layout_width="20dp"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_baseline_visibility_off_24">
                    </ImageView>
                </RelativeLayout>
            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputRePassword"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <RelativeLayout

                android:layout_width="350dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtRe_Password"
                    style="@style/modifiedEditText"
                    android:hint="Re-enter Password"
                    android:maxLines="1"
                    android:inputType="textPassword"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgShowPass1"
                        android:layout_width="20dp"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_baseline_visibility_off_24">
                    </ImageView>
                </RelativeLayout>
            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <RadioButton
                    android:id="@+id/rdoStudent"
                    style="@style/modifiedEditText"
                    android:maxLines="1"
                    android:hint="Sinh viÃªn"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rdoAdmin"
                    style="@style/modifiedEditText"
                    android:maxLines="1"
                    android:hint="Admin"
                    android:layout_marginLeft="10dp"/>
            </RadioGroup>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnDangKy"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:text="Register"
            android:layout_marginTop="20dp"/>

        <TextView
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:text="@string/signup_login_hint"
            android:layout_marginTop="@dimen/loginViewsMargin"/>
        <Button
            android:id="@+id/btnSignIn"
            android:layout_height="25dp"
            android:layout_width="70dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/whiteTextColor"
            android:background="@drawable/login_button_bk"
            android:text="Sign In"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>