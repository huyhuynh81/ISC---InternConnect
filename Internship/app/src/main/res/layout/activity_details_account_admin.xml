<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:fontFamily="@font/arial"
                android:background="@drawable/border"
                android:id="@+id/detailsJP"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Chi tiết Account"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/motacongty"
                android:layout_gravity="center_horizontal"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/detailsJP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2.0"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Email:"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textSize="18dp"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edtEmailAcc_Details_Admin"
                            android:layout_width="270dp"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/arial"
                            android:gravity="left|center"
                            android:justificationMode="inter_word"
                            android:padding="5dp"
                            android:textColor="@android:color/background_dark"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Mật khẩu:"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edtPass_Details_Admin"
                            android:fontFamily="@font/arial"
                            android:background="@android:color/transparent"
                            android:justificationMode="inter_word"
                            android:layout_width="match_parent"
                            android:padding="3dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/background_dark"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Quyền: "
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edtRole_Details_Admin"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/arial"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:textColor="@android:color/background_dark"
                            android:textStyle="bold"
                            android:gravity="left|center" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/idLinearLayout1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/name_icon"/>
                    <EditText
                        android:id="@+id/edtNameAcc_Details_Admin"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:background="@null"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Address_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/phone_icon"/>
                    <EditText
                        android:id="@+id/edtPhoneAcc_Details_Admin"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:background="@null"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnDeleteAcc_Admin"
                    style="@style/loginButton"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorAccent"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="Xóa" />

                <Button
                    android:id="@+id/btnUpdatePostAcc_Admin"
                    style="@style/loginButton"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Cập nhật" />

            </LinearLayout>
            <EditText
                android:id="@+id/edtId_Post"
                android:fontFamily="@font/arial"
                android:lineSpacingExtra="5dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/background_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:visibility="gone"
                android:enabled="false"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

