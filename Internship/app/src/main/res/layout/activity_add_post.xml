<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:fontFamily="@font/arial"
                android:background="@drawable/border"
                android:id="@+id/detailsJP"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Thêm bài đăng"
                android:textColor="@android:color/background_dark"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/edtmotacongty"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/detailsJP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageButton
                        android:id="@+id/addimgLogo_Details"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@null"
                        android:layout_gravity="center"
                        android:background="@drawable/border_image"/>

                    <TextView
                        android:id="@+id/txtLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/arial"
                        android:hint="Logo"
                        android:textColor="@android:color/background_dark">
                    </TextView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2.0"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">
                    <EditText
                        android:id="@+id/addPosition_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@android:color/background_dark"
                        android:gravity="left|center"
                        android:hint="Vị trí công việc"/>

                    <EditText
                        android:id="@+id/addName_Details"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:fontFamily="@font/arial"
                        android:gravity="left|center"
                        android:justificationMode="inter_word"
                        android:textSize="15dp"
                        android:hint="Tên công ty"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/idLinearLayout1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/user_group"/>
                    <EditText
                        android:id="@+id/addNumber_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"
                        android:hint="Số lượng"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Address_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/address"/>
                    <EditText
                        android:id="@+id/addLocation_Details"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"
                        android:hint="Địa chỉ"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/salary_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/salary"/>
                    <EditText
                        android:id="@+id/addSalary_Details"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="17dp"
                        android:gravity="left|center"
                        android:hint="Lương"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/sex_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gender"/>

                    <EditText
                        android:id="@+id/addGender_Details"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/arial"
                        android:gravity="left|center"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:textSize="17dp"
                        android:hint="Giới tính"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yeucau"
                android:background="@drawable/border"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:fontFamily="@font/arial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Yêu cầu"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark">
                </TextView>
                <EditText
                    android:id="@+id/addRequired_Details"
                    android:fontFamily="@font/arial"
                    android:lineSpacingExtra="5dp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/background_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:hint="Yêu cầu"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:fontFamily="@font/arial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Quyền lợi"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark">
                </TextView>
                <EditText
                    android:id="@+id/addBenifit_Details"
                    android:fontFamily="@font/arial"
                    android:lineSpacingExtra="5dp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/background_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:gravity="left|center"
                    android:hint="Quyền lợi"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnBack"
                    style="@style/loginButton"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorAccent"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="Quay lại" />

                <Button
                    android:id="@+id/btnAdd"
                    style="@style/loginButton"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Thêm bài đăng" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>