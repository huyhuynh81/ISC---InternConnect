<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:fontFamily="@font/arial"
                android:background="@drawable/border"
                android:id="@+id/detailsJ_JA"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Chi tiết hồ sơ"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/motacongty"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/detailsJP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgCV_JA"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/pdf_file_icon"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/txtCV_JA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="2dp"
                    android:padding="3dp"
                    android:text="cacsacascsacs"
                    android:textSize="13dp"
                    android:visibility="gone">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2.0"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp">
                    <TextView
                        android:id="@+id/txtNameCom_JA"
                        android:fontFamily="@font/arial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:padding="5dp"
                        android:layout_margin="2dp"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:gravity="left|center" />

                    <TextView
                        android:id="@+id/txtNameUser_JA"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/idLinearLayout1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/user_group"/>
                    <TextView
                        android:id="@+id/txtNameSchool_JA"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Major_JA"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/address"/>
                    <TextView
                        android:id="@+id/txtMajor_JA"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/arial"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="left|center"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/salary_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/salary"/>
                    <TextView
                        android:id="@+id/txtDate_JA"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="17dp"
                        android:gravity="left|center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/sex_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gender"/>
                    <TextView
                        android:id="@+id/txtStatus_JA"
                        android:fontFamily="@font/arial"
                        android:justificationMode="inter_word"
                        android:textColor="@android:color/background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="17dp"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/btnAccept_JA"
                    style="@style/loginButton"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Xác nhận"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/btnRefuse_JA"
                    style="@style/loginButton"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorAccent"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Từ chối" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>